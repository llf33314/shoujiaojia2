<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.customize.core.dao.minipark.CustomizeMiniparkEatDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gt.customize.core.entity.minipark.CustomizeMiniparkEat">
		<id column="id" property="id" />
		<result column="bus_id" property="busId" />
		<result column="shop_name" property="shopName" />
		<result column="shop_logo_url" property="shopLogoUrl" />
		<result column="shop_introduce" property="shopIntroduce" />
		<result column="shop_add" property="shopAdd" />
		<result column="shop_lon" property="shopLon" />
		<result column="shop_lat" property="shopLat" />
		<result column="shop_phone" property="shopPhone" />
		<result column="shop_banner_url" property="shopBannerUrl" />
		<result column="shop_remark" property="shopRemark" />
		<result column="shop_status" property="shopStatus" />
		<result column="create_time" property="createTime" />
		<result column="deleteflag" property="deleteflag" />
	</resultMap>

	<!-- 移动端查询映射结果 -->
	<resultMap id="MListEatResultMap" type="com.gt.customize.core.bean.minipark.res.MListEatRes">
		<id column="id" property="id" />
		<result column="shop_name" property="name" />
		<result column="shop_logo_url" property="logoUrl" />
		<result column="shop_introduce" property="introduce" />
		<result column="shop_add" property="address" />
		<result column="shop_phone" property="phone" />
		<result column="shop_disctanse" property="distance" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, bus_id, shop_name, shop_logo_url, shop_introduce, shop_add, shop_lon, shop_lat, shop_phone, shop_banner_url, shop_remark, shop_status, create_time, deleteflag
    </sql>

	<select id="selectListOrderDistanceByPage" resultMap="MListEatResultMap">
		SELECT id, shop_logo_url, shop_name, shop_introduce, shop_add, shop_phone, getDistanse( ${lon}, ${lat}, shop_lon, shop_lat) AS shop_disctanse
		FROM t_customize_minipark_eat
		WHERE shop_status = 0 AND deleteflag = 0
		AND bus_id = #{busId}
		ORDER BY getDistanse( ${lon}, ${lat}, shop_lon, shop_lat)
	</select>

</mapper>
